 @model Restaurant_Reservation_MVC.Models.Restaurant

@{
    ViewData["Title"] = "SearchByLocation";
}

<h1 class="page-title">Search By Location</h1>

<h4 class="section-title">Restaurant Details</h4>
<hr />
<div class="form-container">
    <form asp-action="SearchByLocation">
        <div class="form-group">
            <label asp-for="Location" class="label"></label>
            <input asp-for="Location" class="input-field" placeholder="Enter location..." />
            <span asp-validation-for="Location" class="error-message"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Search By Location" class="submit-btn" />
        </div>
    </form>
</div>

<div class="back-link">
    <a asp-action="Index" class="back-btn">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

