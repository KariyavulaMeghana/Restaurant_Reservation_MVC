@model IEnumerable<Restaurant_Reservation_MVC.DTO.MenuItemDTO>

@{
    ViewBag.Title = "Menu Items";
}

<h2>Menu Items</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Menu ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Category</td>
                <td>@item.MenuId</td>
                <td>
                    <a asp-controller="Orders" asp-action="PlaceOrder">Place Order</a>
                </td>
                <td>
                    <a asp-controller="Tables" asp-action="CheckAvailability">Table Reservation</a>
                </td>
            </tr>
        }
    </tbody>
</table>

