@model IEnumerable<Restaurant_Reservation_MVC.Models.Review>

<h2>Reviews for Restaurant</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                @* <th>User</th> *@
                <th>Rating</th>
                <th>Comment</th>
                <th>Review Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    @* <td>@review.User?.UserName</td> *@
                    <td>@review.Rating</td>
                    <td>@review.Comment</td>
                    <td>@review.ReviewDate.ToString("MMMM dd, yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews available for this restaurant.</p>
}
