@model IEnumerable<Restaurant_Reservation_MVC.DTO.TableDtoDisplay>

@{
    ViewBag.Title = "Table Availability";
}

<h2>Table Availability</h2>

@if (!Model.Any())
{
    <p>No tables are available at the moment.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Table ID</th>
                <th>Number of Seats</th>
                <th>Booked Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.TableId</td>
                    <td>@table.NoOfTables</td>
                    <td>@(table.IsBooked ? "Booked" : "Available")</td>
                    <td><a asp-controller="Reservations" asp-action="Create">Reserve</a></td>
                </tr>
            }
        </tbody>
    </table>
}

